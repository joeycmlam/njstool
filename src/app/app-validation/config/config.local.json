{
  "data_file": "./data/sample.csv",
  "delimiter": "|",
  "header": true,
  "columns": {
    "customer_code": {
      "length": 8,
      "skip": true
    },
    "first_name": {
      "length": 12,
      "skip": false
    },
    "last_name": {
      "length": 20,
      "skip": false
    },
    "gender": {
      "length": 1,
      "reference": {
        "file": "data/gender.csv",
        "valueColumn": "gender_code"
      },
      "skip": false
    },
    "address": {
      "length": 50,
      "skip": false
    },
    "country": {
      "length": 3,
      "reference": {
        "file": "data/country.csv",
        "valueColumn": "country_code"
      },
      "skip": false
    },
    "status": {
      "start": 26,
      "length": 20,
      "skip": false
    }
  },
  "output": {
      "path": "./result",
        "file": "validation.xlsx",
        "sheet_name": "Results",
        "headers": ["Row ID", "Column" , "Value",  "Status"],
        "timestamped": true
  },
  "log": {
    "path": "./log",
    "file": "app.log",
    "level": "DEBUG",
    "enable_console": true
  }

}