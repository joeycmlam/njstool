{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "inlineSourceMap": false,
      "inlineSources": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": [
      "node_modules"
    ]
  }